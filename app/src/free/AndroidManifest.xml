<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tanyayuferova.lifestylenews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.MainActivityFree"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.ArticlesListActivityFree"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.activity.MainActivityFree">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.tanyayuferova.lifestylenews.ui.activity.MainActivityFree" />
        </activity>
        <activity
            android:name=".ui.activity.ArticleDetailsActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.TranparentStausBar" />
        <activity android:name=".ui.activity.TopicsActivity" />
        <activity android:name=".ui.activity.SettingsActivity" />

        <provider
            android:name=".data.ArticlesContentProvider"
            android:authorities="@string/content_authority"
            android:exported="false" />

        <service
            android:name=".sync.FirebaseJobService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE" />
            </intent-filter>
        </service>

        <receiver android:name=".ui.widget.RecentArticlesWidget"
            android:label="@string/recent_articles_widget_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/recent_articles_widget_info" />
        </receiver>

        <service android:name=".services.ArticleIntentService" />
        <service
            android:name=".services.GridWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name=".ui.widget.FavoriteArticlesWidget"
            android:label="@string/favorite_articles_widget_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/favorite_articles_widget_info" />
        </receiver>
    </application>

</manifest>