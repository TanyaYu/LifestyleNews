<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main">

    <fragment
        android:id="@+id/main"
        android:name="com.tanyayuferova.lifestylenews.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_main_to_details"
            app:destination="@id/details" />
        <action
            android:id="@+id/action_main_to_browse"
            app:destination="@id/browse" />
    </fragment>

    <fragment
        android:id="@+id/details"
        android:name="com.tanyayuferova.lifestylenews.ui.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_details_to_browse"
            app:destination="@id/browse" />
    </fragment>

    <fragment
        android:id="@+id/browse"
        android:name="com.tanyayuferova.lifestylenews.ui.details.BrowseFragment"
        android:label="fragment_browse"
        tools:layout="@layout/fragment_browse">
        <argument
            android:name="url"
            app:argType="string" />
    </fragment>
</navigation>