<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.tanyayuferova.lifestylenews.ui.activity.TopicsActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_topics_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_topics_title_margin_top"
            android:text="@string/topics_activity_title"
            android:textAlignment="center"
            android:textSize="@dimen/activity_topics_title_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_topic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_topics_horizontal_margin"
            android:layout_marginTop="@dimen/activity_topics_title_margin_bottom"
            android:singleLine="true"
            app:layout_constraintEnd_toStartOf="@id/fab_add_topic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_topics_title"
            tools:text="android" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_topic"
            android:layout_width="@dimen/activity_topics_action_buttons_size"
            android:layout_height="@dimen/activity_topics_action_buttons_size"
            android:layout_marginRight="@dimen/activity_topics_horizontal_margin"
            android:layout_marginTop="@dimen/activity_topics_title_margin_bottom"
            android:elevation="@dimen/fab_elevation"
            android:onClick="onClickAddTopic"
            android:scaleType="center"
            android:textSize="@dimen/activity_topics_item_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_topics_title"
            app:pressedTranslationZ="@dimen/fab_press_translation_z"
            app:srcCompat="@drawable/ic_add" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_topics"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/activity_topics_vertical_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_topic" />

        <ImageView
            android:id="@+id/iv_navigation_back"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:onClick="onNavigationBackClick"
            android:paddingEnd="@dimen/activity_topics_navigation_padding"
            android:paddingStart="@dimen/activity_topics_navigation_padding"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_dark" />
    </android.support.constraint.ConstraintLayout>
</layout>
