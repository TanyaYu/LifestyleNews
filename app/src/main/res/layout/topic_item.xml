<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="topic"
            type="String" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_topic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_topics_horizontal_margin"
            android:layout_marginStart="@dimen/activity_topics_horizontal_margin"
            android:paddingBottom="@dimen/activity_topics_inner_item_padding"
            android:paddingTop="@dimen/activity_topics_inner_item_padding"
            android:text="@{topic}"
            android:textSize="@dimen/activity_topics_item_text_size"
            app:layout_constraintBottom_toBottomOf="@id/fab_remove_topic"
            app:layout_constraintEnd_toStartOf="@id/fab_add_topic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/fab_remove_topic"
            tools:text="android" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_remove_topic"
            android:layout_width="@dimen/activity_topics_action_buttons_size"
            android:layout_height="@dimen/activity_topics_action_buttons_size"
            android:layout_marginRight="@dimen/activity_topics_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_topics_horizontal_margin"
            android:elevation="@dimen/fab_elevation"
            android:scaleType="center"
            android:paddingBottom="@dimen/activity_topics_inner_item_padding"
            android:paddingTop="@dimen/activity_topics_inner_item_padding"
            android:contentDescription="@string/remove_topic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pressedTranslationZ="@dimen/fab_press_translation_z"
            app:srcCompat="@drawable/ic_remove" />
    </android.support.constraint.ConstraintLayout>
</layout>