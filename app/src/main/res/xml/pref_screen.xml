<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreferenceCompat
        android:defaultValue="@bool/pref_notifications_default"
        android:key="@string/pref_notifications_key"
        android:summaryOff="@string/pref_notifications_enable_false"
        android:summaryOn="@string/pref_notifications_enable_true"
        android:title="@string/pref_notifications_label" />

    <ListPreference
        android:defaultValue="@string/pref_period_12h_value"
        android:entries="@array/pref_periods_labels"
        android:entryValues="@array/pref_periods_values"
        android:key="@string/pref_period_key"
        android:title="@string/pref_period_label" />

</PreferenceScreen>
